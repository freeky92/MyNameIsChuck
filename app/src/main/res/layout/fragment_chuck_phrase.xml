<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".ChuckPhraseFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/central_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/uuid_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="olrje-24-23526dg-1542dfsw-qefw45345" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/chuck_facts_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/change_uuid_tb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uuid_tv2"
            tools:text="Bla-bla-grenade" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/change_uuid_tb"
            style="@style/MyMenuButtons"
            android:layout_height="wrap_content"
            android:text="@string/change_uuid"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_fact_tb"
            style="@style/MyMenuButtons"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/next_fact"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/change_uuid_tb" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/change_background_tb"
            style="@style/MyMenuButtons"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/change_background"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/next_fact_tb" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/launch_next"
            style="@style/MyMenuButtons"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/launch_next"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/change_background_tb" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/launch_next"
            tools:text="Number #1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
